<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="176dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="284dp"
        android:layout_height="190dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/play_button"
        tools:layout_editor_absoluteX="82dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:drawableBottom="@drawable/baseline_stop_24"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/descripciontxt"
        tools:layout_editor_absoluteX="231dp" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:drawableBottom="@drawable/baseline_play_arrow_24"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/stop_button"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripciontxt" />

    <TextView
        android:id="@+id/descripciontxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/titol"
        tools:layout_editor_absoluteX="188dp" />
</androidx.constraintlayout.widget.ConstraintLayout>